<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.3.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven />
    <context:component-scan base-package="bjerne.gallery.controller" />

    <mvc:resources mapping="/static/**" location="/static/" />
    <mvc:default-servlet-handler />

    <bean id="galleryController" class="bjerne.gallery.controller.GalleryController">
        <property name="galleryService" ref="galleryService" />
        <property name="imageFormats">
            <list>
                <bean class="bjerne.gallery.controller.ImageFormat">
                    <property name="code" value="thumb" />
                    <property name="width" value="300" />
                    <property name="height" value="300" />
                </bean>
            </list>
        </property>
        <property name="allowCustomImageSizes" value="true" />
    </bean>

</beans>